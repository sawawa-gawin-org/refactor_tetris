{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "tetris-mandatory",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g3",
				"-fsanitize=address",
				"-I${workspaceFolder}/includes/",
				"${workspaceFolder}/srcs/*.c",
				"${workspaceFolder}/srcs/utils/*.c",
				"${workspaceFolder}/srcs/cores/*.c",
				"-lncurses",
				"-o","${workspaceFolder}/tetris",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
		},
		{
			"type": "cppbuild",
			"label": "tetris-make",
			"command": "make",
			"args": [
				"-C", "${workspaceFolder}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": "build",
		},
	],
	"version": "2.0.0"
}