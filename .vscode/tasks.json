{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "tetris-mandatory",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g3",
				"-fsanitize=address",
				"${workspaceFolder}/srcs/*.c",
				"${workspaceFolder}/srcs/utils/*.c",
				"-lncurses",
				"-o","${workspaceFolder}/tetris",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
		},
	],
	"version": "2.0.0"
}